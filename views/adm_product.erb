<section>
  <div class="container">
<!-- myinfo / Srart -->
		<style type="text/css">
			.tabletdinput{width:100%;border:none;background:#f5f5f5;height:36px;width:200px;padding-left:20px;font-family:Lato,  Microsoft YaHei, sans-serif;color:#6F7275;outline:none;transition:all 200ms;-moz-transition:all 200ms;-webkit-transition:all 200ms}
		</style>
		<div class="sixteen columns"><div class="separator nb"><h3>优惠码管理</h3></div></div>
		<span>增加一个优惠码：</span><br/>
		
		<form method="POST">
			<table class="default-table">
				<tr>
					<td style="border-top: #E7E7E7 1px solid;width:25%;border-top-left-radius: 4px;border-bottom-left-radius: 4px;border-top-right-radius: 0;border-bottom-right-radius: 0;"><input class="tabletdinput" type="privilege" name="coupon" placeholder="输入优惠码名称"></td>
					<td style="border-top: #E7E7E7 1px solid;width:25%"><input class="tabletdinput" type="privilege" name="discount" placeholder="折扣(7.0)"></td>
					<td style="border-top: #E7E7E7 1px solid;width:25%"><input class="tabletdinput" type="privilege" name="deadline" placeholder="截止日期（格式为 yy-mm-dd）"></td>
					<td style="border-top: #E7E7E7 1px solid;width:25%;border-top-right-radius: 4px;border-bottom-right-radius: 4px;border-top-left-radius: 0;border-bottom-left-radius: 0;"><input type="submit" value="确定增加" class="btn btn-primary" style="display:inline-block;font-weight:bold;width:150px"></td>
				</tr>
			</table>
		</form><br/><br/>

		<table class="default-table">
			<tr>
				<th>优惠码</th>
				<th>折扣</th>
				<th>截至日期</th>
				<th>管理</th>
			</tr>
			<% @coupons.each do |c| %>
			<tr>
				<td><%= c.code %></td>
				<td><%= sprintf("%.2f", c.discount * 10.0) %>折</td>
				<td><%= c.deadline %></td>
				<td><a href="/admin/coupon/<%= c.code %>/delete">删除</a></td>
			</tr>
			<% end %>
		</table>
		
	</div>
</section>
<!-- myinfo / End -->
